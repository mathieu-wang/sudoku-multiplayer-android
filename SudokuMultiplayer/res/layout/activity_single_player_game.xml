            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Easy"
                    android:id="@+id/radioButtonEasy"
                    android:onClick="onRadioButtonClicked"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium"
                    android:id="@+id/radioButtonMedium"
                    android:onClick="onRadioButtonClicked"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/radioButtonEasy"
                    android:layout_toEndOf="@+id/radioButtonEasy"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_alignBottom="@+id/radioButtonEasy" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hard"
                    android:id="@+id/radioButtonHard"
                    android:onClick="onRadioButtonClicked"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/radioButtonMedium"
                    android:layout_toEndOf="@+id/radioButtonMedium"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_alignBottom="@+id/radioButtonMedium" />
            </RadioGroup>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Game"
